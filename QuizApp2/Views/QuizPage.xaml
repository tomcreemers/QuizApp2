<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QuizApp2.Views.QuizPage"
    Title="Quiz + Joke Page">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Quiz Section -->
        <Label Text="Quiz Question"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center" />

        <Label Text="{Binding CurrentQuestion}"
               FontSize="16"
               HorizontalOptions="Center" />

        <Button Text="Next Question"
                Command="{Binding NextQuestionCommand}" />

        <!-- Joke Section -->
        <Label Text="Chuck Norris Joke"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />

        <Button Text="Get Random Joke"
                Command="{Binding FetchJokeCommand}" />

        <Label Text="{Binding JokeText}"
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>
