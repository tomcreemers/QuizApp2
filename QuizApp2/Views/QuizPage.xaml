<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QuizApp2.Views.QuizPage"
    Title="Quiz Page">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Show the selected category -->
        <Label Text="{Binding Category}"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Show the current question -->
        <Label Text="{Binding CurrentQuestion}"
               FontSize="16"
               HorizontalOptions="Center" />

        <Button Text="Next Question"
                Command="{Binding NextQuestionCommand}" />

        <!-- Chuck Norris joke part -->
        <Label Text="Random Joke" FontSize="18" />
        <Button Text="Get Random Joke" Command="{Binding FetchJokeCommand}" />
        <Label Text="{Binding JokeText}" FontSize="14" />
    </VerticalStackLayout>
</ContentPage>
