<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QuizApp2.Views.AccountPage"
    Title="Account Info">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Account Info"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Show user email or fallback text -->
        <Label x:Name="EmailLabel"
               FontSize="18"
               HorizontalOptions="Center" />

        <!-- WebView to display the SVG code -->
        <WebView x:Name="QrWebView"
                 WidthRequest="300"
                 HeightRequest="300"
                 HorizontalOptions="Center"
                 VerticalOptions="CenterAndExpand" />

        <Button Text="Return"
                Clicked="OnReturnClicked" />
    </VerticalStackLayout>
</ContentPage>
